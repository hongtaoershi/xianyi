<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#22000000"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:padding="@dimen/dimen_10">
    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_location"
            android:text="太唐宫"
            android:textColor="@color/black"
            android:textSize="@dimen/textsize_16"/>
        <LinearLayout
            android:id="@+id/cclayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="@dimen/dimen_10"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="活跃人数 22"
                      android:singleLine="true"
                      android:textColor="@color/dark_gray"
                      android:textSize="@dimen/textsize_14"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="@dimen/dimen_15"
                      android:text="待换闲置 822"
                      android:singleLine="true"
                      android:textColor="@color/dark_gray"
                      android:textSize="@dimen/textsize_14"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cclayout"
            android:layout_marginTop="@dimen/dimen_10"
            android:gravity="left"
            android:text="本周新增 82"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/textsize_14"
        />
        <LinearLayout android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@id/tv_3"
                      android:layout_marginTop="@dimen/dimen_10"
                      android:gravity="center_horizontal"
                      android:orientation="horizontal">
            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_5"
                android:background="@drawable/red_bt_selector"
                android:paddingBottom="@dimen/dimen_7"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_7"
                android:text="加入"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14"/>
            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:background="@drawable/gray_bt_selector"
                android:paddingBottom="@dimen/dimen_7"
                android:paddingLeft="@dimen/dimen_15"
                android:paddingRight="@dimen/dimen_15"
                android:paddingTop="@dimen/dimen_7"
                android:text="不要"
                android:clickable="true"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>