<?xml version="1.0" encoding="utf-8"?>
<!-- 分类列表，主列表广告一个图片布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:background="#f7f3f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">

        <!-- 顶部 -->
        <RelativeLayout
            android:id="@+id/ly_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <!-- 状态 -->
            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textColor="@color/classify_text_gray"
                android:text="此宝贝已被卖家删除"
                android:layout_alignParentLeft="true"
                android:gravity="center"/>

        </RelativeLayout>

        <!-- 头像，价钱等 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f7f3f0"
            android:layout_marginTop="15dp">

            <!-- 头像 -->
            <ImageView
                android:id="@+id/im_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/pic_product"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 新价钱 -->
                    <TextView
                        android:id="@+id/gv_main_list_one_price_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="18sp"
                        android:textColor="@color/classify_text_orange"
                        android:text="￥350"
                        android:layout_alignParentLeft="true"/>

                    <!-- 旧价钱 -->
                    <TextView
                        android:id="@+id/gv_main_list_one_price_old"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/classify_text_gray"
                        android:text="￥450"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/gv_main_list_one_price_now"/>


                </RelativeLayout>

                <!-- 地址 -->
                <TextView
                    android:id="@+id/tv_my_collect_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"
                    android:textColor="@color/classify_text_gray"
                    android:text="Pouch婴儿推车婴儿车宝宝手推车童车高景观避震轻便可躺可坐"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>