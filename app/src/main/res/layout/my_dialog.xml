<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/btn_board_gray"
              android:gravity="center"
              android:orientation="vertical"
              android:padding="10dp">

    <ImageView android:id="@+id/dialog_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/record_animate_01"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_3"
              android:text="00:00"
        />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/dimen_3"
              android:text="录音时间最短5s，最长120s"
        />
    <LinearLayout
        android:id="@+id/mBtLayout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20"
        android:layout_marginBottom="@dimen/dimen_5"
        android:orientation="horizontal">
        <Button
            android:id="@+id/mConfirmBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:layout_marginRight="@dimen/dimen_5"
            android:background="@drawable/common_btn_red"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:text="开始录音"/>
        <Button
            android:id="@+id/mCancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/dimen_5"
            android:paddingBottom="@dimen/dimen_5"
            android:paddingLeft="@dimen/dimen_10"
            android:paddingRight="@dimen/dimen_10"
            android:layout_marginLeft="@dimen/dimen_5"
            android:background="@drawable/common_btn_border_gray"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="取消录音"/>
    </LinearLayout>
</LinearLayout>