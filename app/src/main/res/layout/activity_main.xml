<com.xianyi.customviews.residelayout.SlidingMenu
    android:id="@+id/id_menu"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/stars"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <!-- 侧面导航栏 -->
        <include layout="@layout/layout_menu"/>

        <!-- 底部导航栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/bottom_tv"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"/>

            <FrameLayout
                android:id="@+id/center_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_above="@id/bottom_tv">
            </FrameLayout>

            <RelativeLayout
                android:id="@+id/bottom"
                android:layout_width="wrap_content"
                android:layout_height="62dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/tab_pulish_bg"/>

                <LinearLayout
                    android:id="@+id/tab_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tab0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/menu_im"
                        android:gravity="center_horizontal"
                        android:onClick="onClick"
                        android:tag="tab0"
                        android:text="分类"
                        android:textColor="@color/title_gray"/>

                    <TextView
                        android:id="@+id/tab1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/tab_find_normal"
                        android:gravity="center_horizontal"
                        android:onClick="onClick"
                        android:tag="tab1"
                        android:text="发现"
                        android:textColor="@color/title_gray"/>

                    <TextView
                        android:id="@+id/tab2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/tab_publish"
                        android:gravity="center_horizontal"
                        android:onClick="onClick"
                        android:tag="tab2"
                        android:text="发布"
                        android:textColor="@color/title_gray"/>

                    <TextView
                        android:id="@+id/tab3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/tab_message_normal"
                        android:gravity="center_horizontal"
                        android:onClick="onClick"
                        android:tag="tab3"
                        android:text="消息"
                        android:textColor="@color/title_gray"/>

                    <TextView
                        android:id="@+id/tab4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawablePadding="3dp"
                        android:drawableTop="@drawable/tab_score_normal"
                        android:gravity="center_horizontal"
                        android:onClick="onClick"
                        android:tag="tab4"
                        android:text="积分"
                        android:textColor="@color/title_gray"/>

                </LinearLayout>

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:onClick="toggleMenu"
                android:background="@drawable/tab_sort_normal"/>

        </RelativeLayout>

    </LinearLayout>

</com.xianyi.customviews.residelayout.SlidingMenu>
