<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >


    <!-- 填充的颜色：这里设置背景透明 -->
    <solid android:color="#00ff304a" />
    <!-- 边框的颜色 ：不能和窗口背景色一样 -->
    <stroke
        android:width="1dp"
        android:color="#ffffff" />
    <!-- 设置四个角的角度 -->
    <corners
        android:topRightRadius="0.0dp"
        android:topLeftRadius="@dimen/btn_radis"
        android:bottomLeftRadius="@dimen/btn_radis"
        android:bottomRightRadius="0.0dp"/>

</shape>